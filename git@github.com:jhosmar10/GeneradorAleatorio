import java.util.Random;

public class GeneradorAleatorio {
    
    private static final String[] nombres = {"Juan", "María", "Pedro", "Ana", "Luis", "Laura", "Carlos", "Sara", "David", "Elena", "Pablo", "Carmen", "Javier", "Lucía", "Miguel", "Rosa", "Alejandro", "Paula", "Diego", "Sandra"};

    private static final String[] productos = {"Pan", "Leche", "Huevos", "Arroz", "Pasta", "Aceite", "Azúcar", "Sal", "Tomates", "Cebollas", "Patatas", "Manzanas"};

    private static final Random rand = new Random();

    public static String generarNombreAleatorio() {
        return nombres[rand.nextInt(nombres.length)];
    }

    public static String generarProductoAleatorio() {
        return productos[rand.nextInt(productos.length)];
    }
}
